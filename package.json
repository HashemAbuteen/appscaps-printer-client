{
  "name": "print-order-client",
  "version": "1.0.27",
  "main": "src/main.js",
  "scripts": {
    "build": "node build.js",
    "start": "electron ."
  },
  "build": {
    "appId": "com.appscaps.printer-client",
    "productName": "Taps Apps Printer Client",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "HashemAbuteen",
      "repo": "appscaps-printer-client",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64","ia32"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.exe",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "dotenv": "^16.4.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "graphql": "^15.9.0",
    "graphql-ws": "^5.16.0",
    "ws": "^8.18.0"
  }
}
